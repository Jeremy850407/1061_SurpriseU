<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.surpriseu.joinChange">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="姓名"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="地址"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mailAddress"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="郵遞區號"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/mailAddressInput"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="手機號碼"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/want"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="許願池"
                android:textAlignment="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="1."
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/wantInput1"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="2."
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/wantInput2"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text2"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="3."
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/wantInput3"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dontWant"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="雷池"
                android:textAlignment="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="1."
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dontWantInput1"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text3"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="2."
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dontWantInput2"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text4"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="3."
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dontWantInput3"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="參加"/>
    </TableRow>

</TableLayout>
