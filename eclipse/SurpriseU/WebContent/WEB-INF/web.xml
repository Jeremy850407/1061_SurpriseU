<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>SurpriseU</display-name>
	<welcome-file-list>
		<welcome-file>Login.html</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>db.controller.ServletListener</listener-class>
	</listener>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost/</param-value>
	</context-param>
	<context-param>
		<param-name>database</param-name>
		<param-value>surpriseu</param-value>
	</context-param>
	<context-param>
		<param-name>user_name</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>password</param-name>
		<param-value>15192353</param-value>
	</context-param>

	<servlet>
		<servlet-name>LoginVerificationServlet</servlet-name>
		<servlet-class>u.controller.LoginVerificationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginVerificationServlet</servlet-name>
		<url-pattern>/LoginVerificationServlet</url-pattern>
	</servlet-mapping>
	  <servlet>
    <servlet-name>HomepageServlet</servlet-name>
    <servlet-class>u.controller.HomepageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomepageServlet</servlet-name>
    <url-pattern>/HomepageServlet</url-pattern>
  </servlet-mapping>
  <servlet>
		<servlet-name>attackServlet</servlet-name>
		<servlet-class>u.controller.attackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>attackServlet</servlet-name>
		<url-pattern>/attackServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>changeDetailServlet</servlet-name>
		<servlet-class>u.controller.changeDetailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>changeDetailServlet</servlet-name>
		<url-pattern>/changeDetailServlet</url-pattern>
	</servlet-mapping>
</web-app>